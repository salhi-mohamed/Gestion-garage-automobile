<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="CENTER" prefHeight="435.0" prefWidth="579.0" spacing="20" style="-fx-padding: 20;" stylesheets="@ModifierStyles.css" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controlleurs.ModifierPieceRechangeController">
    <Label style="-fx-font-size: 18px; -fx-font-weight: bold;" text="Liste des Pièces de Rechange - Modification" />

    <TableView fx:id="tableViewPieces" style="-fx-pref-height: 300;">
        <columns>
            <TableColumn fx:id="columnNom" text="Nom" />
            <TableColumn fx:id="columnCategorie" text="Catégorie" />
            <TableColumn fx:id="columnPrix" text="Prix" />
            <TableColumn fx:id="columnQuantite" text="Quantité" />
        </columns>
    </TableView>

    <HBox alignment="CENTER" spacing="20">
        <Button fx:id="buttonModifier" onAction="#ouvrirFormulaireModification" text="Modifier la Pièce" />
    </HBox>
</VBox>
