<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<GridPane prefHeight="879.0" prefWidth="1237.0" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controlleurs.GestionFacturesController">

    <!-- Image de fond -->
    <ImageView fx:id="backgroundImage" fitHeight="879.0" fitWidth="1237.0">
        <image>
            <Image url="@../Images/background.png" />
        </image>
    </ImageView>

    <!-- Titre de la gestion des factures -->
    <StackPane alignment="TOP_CENTER">
        <Text style="-fx-font-family: 'Montserrat', sans-serif;                      -fx-font-size: 36px;                      -fx-font-weight: bold;                      -fx-fill: linear-gradient(to right, #34495e, #2c3e50);                      -fx-effect: dropshadow(gaussian, rgba(0, 0, 0, 0.7), 12, 4, 0, 4);                      -fx-text-alignment: center;                      -fx-stroke: #fff;                      -fx-stroke-width: 1px;" text="Gestion des Factures" GridPane.columnSpan="2" />
    </StackPane>

    <!-- Conteneur des boutons -->
    <GridPane alignment="CENTER" hgap="30" style="-fx-background-color: rgba(236, 240, 241, 0.5); -fx-padding: 20px;" vgap="30">

        <!-- Première ligne de boutons -->
        <Button fx:id="btnAjouterFacture" maxWidth="350" minWidth="350" onAction="#ajouterFacture" prefWidth="350" style="-fx-font-size: 18px; -fx-background-color: linear-gradient(to right, #2C3E50, #34495E); -fx-text-fill: white; -fx-padding: 15px 30px; -fx-border-radius: 30px; -fx-background-radius: 30px; -fx-effect: dropshadow(gaussian, rgba(0, 0, 0, 0.4), 10, 0.5, 0, 5);" text="Ajouter une facture" GridPane.columnIndex="0" GridPane.rowIndex="2" />

        <Button fx:id="btnModifierFacture" maxWidth="350" minWidth="350" onAction="#modifierFacture" prefWidth="350" style="-fx-font-size: 18px; -fx-background-color: linear-gradient(to right, #2C3E50, #34495E); -fx-text-fill: white; -fx-padding: 15px 30px; -fx-border-radius: 30px; -fx-background-radius: 30px; -fx-effect: dropshadow(gaussian, rgba(0, 0, 0, 0.4), 10, 0.5, 0, 5);" text="Modifier une facture" GridPane.columnIndex="1" GridPane.rowIndex="2" />

        <!-- Deuxième ligne de boutons -->
        <Button fx:id="btnSupprimerFacture" maxWidth="350" minWidth="350" onAction="#supprimerFacture" prefWidth="350" style="-fx-font-size: 18px; -fx-background-color: linear-gradient(to right, #2C3E50, #34495E); -fx-text-fill: white; -fx-padding: 15px 30px; -fx-border-radius: 30px; -fx-background-radius: 30px; -fx-effect: dropshadow(gaussian, rgba(0, 0, 0, 0.4), 10, 0.5, 0, 5);" text="Supprimer une facture" GridPane.columnIndex="0" GridPane.rowIndex="3" />

        <Button fx:id="btnAfficherFactures" maxWidth="350" minWidth="350" onAction="#afficherFactures" prefWidth="350" style="-fx-font-size: 18px; -fx-background-color: linear-gradient(to right, #2C3E50, #34495E); -fx-text-fill: white; -fx-padding: 15px 30px; -fx-border-radius: 30px; -fx-background-radius: 30px; -fx-effect: dropshadow(gaussian, rgba(0, 0, 0, 0.4), 10, 0.5, 0, 5);" text="Afficher les factures" GridPane.columnIndex="1" GridPane.rowIndex="3" />

        <!-- Ligne de retour -->
        <Button fx:id="btnRetour" maxWidth="350" minWidth="350" onAction="#retour" prefWidth="350" style="-fx-font-size: 18px; -fx-background-color: linear-gradient(to right, #e74c3c, #c0392b); -fx-text-fill: white; -fx-padding: 15px 30px; -fx-border-radius: 30px; -fx-background-radius: 30px; -fx-effect: dropshadow(gaussian, rgba(0, 0, 0, 0.4), 10, 0.5, 0, 5);" text="Retour" GridPane.columnIndex="0" GridPane.rowIndex="4" />
      <columnConstraints>
         <ColumnConstraints />
         <ColumnConstraints />
      </columnConstraints>
      <rowConstraints>
         <RowConstraints />
         <RowConstraints />
         <RowConstraints />
         <RowConstraints />
         <RowConstraints />
      </rowConstraints>
    </GridPane>
   <columnConstraints>
      <ColumnConstraints />
   </columnConstraints>
   <rowConstraints>
      <RowConstraints />
   </rowConstraints>
</GridPane>
