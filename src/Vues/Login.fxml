<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.paint.Color?>
<?import javafx.scene.text.Text?>

<StackPane prefHeight="600.0" prefWidth="800.0" style="-fx-alignment: center; -fx-background-color: #f5f5f5;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controlleurs.LoginController">

    <!-- Mise en page en HBox avec une colonne pour le login et une image de fond -->
    <HBox prefWidth="800" prefHeight="600" style="-fx-background-color: transparent; -fx-padding: 0;">
    
        <!-- Partie gauche avec formulaire de connexion -->
        <VBox alignment="CENTER" spacing="20" style="-fx-background-color: rgba(255, 255, 255, 0.85); -fx-background-radius: 12px; -fx-padding: 30px; -fx-pref-width: 350px; -fx-effect: dropshadow(gaussian, rgba(0, 0, 0, 0.3), 10, 4, 0, 4);">
        
            <!-- Titre de la page -->
            <Text fx:id="loginTitle"
                  style="-fx-font-family: 'Roboto', sans-serif;
                         -fx-font-size: 26px;
                         -fx-font-weight: bold;
                         -fx-fill: #2c3e50;
                         -fx-text-alignment: center;"
                  text="Connexion AutoMécano" />

            <!-- Champ pour l'email -->
            <TextField fx:id="emailField" promptText="Email" prefWidth="280" style="-fx-background-color: #ecf0f1; -fx-border-radius: 25px; -fx-padding: 10px 20px; -fx-font-size: 14px;" />

            <!-- Champ pour le mot de passe -->
            <PasswordField fx:id="passwordField" promptText="Mot de passe" prefWidth="280" style="-fx-background-color: #ecf0f1; -fx-border-radius: 25px; -fx-padding: 10px 20px; -fx-font-size: 14px;" />

            <!-- Bouton de connexion -->
            <Button fx:id="loginButton" onAction="#handleLogin" text="Se connecter" prefWidth="280" style="-fx-font-size: 16px; -fx-background-color: #3498db; -fx-text-fill: white; -fx-padding: 10px 0; -fx-border-radius: 25px; -fx-background-radius: 25px; -fx-effect: dropshadow(gaussian, rgba(0, 0, 0, 0.3), 10, 3, 0, 5);" />

        </VBox>

        <!-- Partie droite avec un arrière-plan dynamique -->
        <VBox alignment="CENTER" spacing="10" style="-fx-background-color: linear-gradient(to bottom right, #3498db, #2c3e50); -fx-pref-width: 450px; -fx-background-radius: 12px;">
            <!-- Vous pouvez ajouter des effets comme une image floue ou des éléments géométriques ici -->
        </VBox>
        
    </HBox>
</StackPane>
