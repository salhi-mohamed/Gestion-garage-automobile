<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>

<StackPane prefHeight="600.0" prefWidth="800.0" style="-fx-alignment: center; -fx-padding: 50px;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controlleurs.LoginController">
    
    <!-- Contenu de la page -->
    <VBox alignment="CENTER" spacing="20" style="-fx-background-color: transparent;">
        
        <!-- Titre de la page -->
        <Text fx:id="loginTitle" 
              style="-fx-font-family: 'Montserrat', sans-serif; 
                     -fx-font-size: 30px; 
                     -fx-font-weight: bold; 
                     -fx-fill: linear-gradient(to right, #2c3e50, #34495e); 
                     -fx-effect: dropshadow(gaussian, rgba(0, 0, 0, 0.7), 12, 4, 0, 4); 
                     -fx-text-alignment: center;" 
              text="Connexion à l'Application AutoMécano" />
        
        <!-- Champ pour l'email -->
        <TextField fx:id="emailField" promptText="Email" prefWidth="300" style="-fx-padding: 10px; -fx-background-color: #f0f0f0; -fx-border-radius: 5px;" />

        <!-- Champ pour le mot de passe -->
        <PasswordField fx:id="passwordField" promptText="Mot de passe" prefWidth="300" style="-fx-padding: 10px; -fx-background-color: #f0f0f0; -fx-border-radius: 5px;" />

        <!-- Bouton de connexion -->
        <Button fx:id="loginButton" onAction="#handleLogin" text="Se connecter" prefWidth="300" style="-fx-font-size: 18px; -fx-background-color: linear-gradient(to right, #2C3E50, #34495E); -fx-text-fill: white; -fx-padding: 15px 30px; -fx-border-radius: 30px; -fx-background-radius: 30px; -fx-effect: dropshadow(gaussian, rgba(0, 0, 0, 0.4), 10, 0.5, 0, 5);" />
        
        <!-- Espacement dynamique -->
        <VBox VBox.vgrow="ALWAYS" />
    </VBox>
</StackPane>
