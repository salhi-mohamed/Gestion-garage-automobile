<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns:fx="http://javafx.com/fxml" fx:controller="Controlleurs.AjouterEmployeController" spacing="10" alignment="CENTER" style="-fx-padding: 20px;">
    <Label text="Ajouter un nouvel employé" style="-fx-font-size: 24px; -fx-font-weight: bold;"/>

    <!-- Nom -->
    <Label text="Nom:"/>
    <TextField fx:id="nomField" promptText="Entrez le nom"/>

    <!-- Prénom -->
    <Label text="Prénom:"/>
    <TextField fx:id="prenomField" promptText="Entrez le prénom"/>

    <!-- Téléphone -->
    <Label text="Téléphone:"/>
    <TextField fx:id="telephoneField" promptText="Entrez le téléphone"/>

    <!-- Adresse -->
    <Label text="Adresse:"/>
    <TextField fx:id="adresseField" promptText="Entrez l'adresse"/>

    <!-- Salaire -->
    <Label text="Salaire:"/>
    <TextField fx:id="salaireField" promptText="Entrez le salaire"/>

    <!-- Date d'embauche with DatePicker -->
    <Label text="Date d'embauche:"/>
    <DatePicker fx:id="dateEmbaucheField" promptText="Sélectionnez une date"/>

    <!-- Type d'employé -->
    <Label text="Type d'employé:"/>
    <ComboBox fx:id="typeEmployeCombo" promptText="Sélectionnez un type"/>

    <!-- Spécialité (only visible if Mécanicien is selected) -->
    <Label text="Spécialité:"/>
    <ComboBox fx:id="specialiteCombo" promptText="Sélectionnez une spécialité"/>

    <!-- Expertise (only visible if Mécanicien is selected) -->
    <Label text="Expertise:"/>
    <ComboBox fx:id="expertiseCombo" promptText="Sélectionnez une expertise"/>

    <!-- Laveur Specialization (only visible if Laveur is selected) -->
    <Label text="Spécialité Laveur:"/>
    <ComboBox fx:id="specialiteLaveurCombo" promptText="Sélectionnez une spécialité Laveur"/>

    <!-- Button to add employee -->
    <Button text="Ajouter Employé" onAction="#ajouterEmploye" style="-fx-font-size: 18px; -fx-padding: 10px 20px; -fx-background-color: #4CAF50; -fx-text-fill: white;"/>
</VBox>
