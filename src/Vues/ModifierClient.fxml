<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
      fx:controller="Controlleurs.ModifierClientController"
      stylesheets="@ModifierStyles.css"
      spacing="20" alignment="CENTER" style="-fx-padding: 20;">
    <Label text="Liste des Clients - Modification" style="-fx-font-size: 18px; -fx-font-weight: bold;" />

    <TableView fx:id="tableViewClients" style="-fx-pref-height: 300;">
        <columns>
            <TableColumn fx:id="columnNom" text="Nom" />
            <TableColumn fx:id="columnPrenom" text="Prénom" />
            <TableColumn fx:id="columnTelephone" text="Téléphone" />
            <TableColumn fx:id="columnAdresse" text="Adresse" />
        </columns>
    </TableView>

    <HBox spacing="20" alignment="CENTER">
        <Button text="Modifier le Client" fx:id="buttonModifier" onAction="#ouvrirFormulaireModification" />
    </HBox>
</VBox>

