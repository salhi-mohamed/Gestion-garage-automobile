<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.VBox?>
<?import javafx.geometry.Pos?>
<?import javafx.scene.layout.HBox?>

<VBox xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controlleurs.AjouterFournitureClientController" spacing="20" padding="20">

    <!-- Section pour afficher les clients -->
    <HBox alignment="CENTER" spacing="20">
        <Label text="Clients Disponibles:"/>
    </HBox>
    <TableView fx:id="tableViewClients" prefHeight="200">
        <TableColumn fx:id="colonneNomClient" text="Nom du Client" prefWidth="200"/>
    </TableView>

    <!-- Section pour afficher les fournitures -->
    <HBox alignment="CENTER" spacing="20">
        <Label text="Fournitures Disponibles:"/>
    </HBox>
    <TableView fx:id="tableViewFournitures" prefHeight="200">
        <TableColumn fx:id="colonneNomFourniture" text="Nom de la Fourniture" prefWidth="200"/>
        <TableColumn fx:id="colonnePrixFourniture" text="Prix" prefWidth="100"/>
    </TableView>

    <!-- Bouton pour ajouter la fourniture au client -->
    <HBox alignment="CENTER" spacing="20">
        <Button fx:id="boutonAjouterFourniture" text="Ajouter Fourniture" onAction="#ajouterFourniture"/>
    </HBox>

</VBox>
