<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Alert?>
<?import javafx.scene.control.Alert.AlertType?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>

<VBox xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controlleurs.AjouterVoitureClientController" spacing="20" style="-fx-padding: 30px; -fx-background-color: #ffffff; -fx-border-radius: 8px; -fx-max-width: 600px; -fx-margin: auto; -fx-box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);">
    <!-- Titre -->
    <Label text="Ajouter une Voiture" style="-fx-font-size: 26px; -fx-font-weight: 600; -fx-text-fill: #333; -fx-margin-bottom: 30px; -fx-text-alignment: center;"/>

    <!-- Sélection du client -->
    <Label text="Sélectionnez un client" style="-fx-font-size: 14px; -fx-text-fill: #555; -fx-font-weight: 500; -fx-margin-bottom: 8px;"/>
    <ComboBox fx:id="comboBoxClients" promptText="Sélectionner un client" style="-fx-font-size: 16px; -fx-padding: 12px; -fx-border-radius: 8px; -fx-border-color: #ccc; -fx-background-color: #f9f9f9; -fx-width: 100%; -fx-margin-bottom: 15px;"/>

    <!-- Marque de la voiture -->
    <Label text="Marque de la voiture" style="-fx-font-size: 14px; -fx-text-fill: #555; -fx-font-weight: 500; -fx-margin-bottom: 8px;"/>
    <TextField fx:id="textFieldMarque" promptText="Marque" style="-fx-font-size: 16px; -fx-padding: 12px; -fx-border-radius: 8px; -fx-border-color: #ccc; -fx-background-color: #f9f9f9; -fx-width: 100%; -fx-margin-bottom: 15px;"/>

    <!-- Modèle de la voiture -->
    <Label text="Modèle de la voiture" style="-fx-font-size: 14px; -fx-text-fill: #555; -fx-font-weight: 500; -fx-margin-bottom: 8px;"/>
    <TextField fx:id="textFieldModele" promptText="Modèle" style="-fx-font-size: 16px; -fx-padding: 12px; -fx-border-radius: 8px; -fx-border-color: #ccc; -fx-background-color: #f9f9f9; -fx-width: 100%; -fx-margin-bottom: 15px;"/>

    <!-- Kilométrage -->
    <Label text="Kilométrage" style="-fx-font-size: 14px; -fx-text-fill: #555; -fx-font-weight: 500; -fx-margin-bottom: 8px;"/>
    <TextField fx:id="textFieldKilometrage" promptText="Kilométrage" style="-fx-font-size: 16px; -fx-padding: 12px; -fx-border-radius: 8px; -fx-border-color: #ccc; -fx-background-color: #f9f9f9; -fx-width: 100%; -fx-margin-bottom: 15px;"/>

    <!-- Immatriculation -->
    <Label text="Immatriculation" style="-fx-font-size: 14px; -fx-text-fill: #555; -fx-font-weight: 500; -fx-margin-bottom: 8px;"/>
    <TextField fx:id="textFieldImmatriculation" promptText="Immatriculation" style="-fx-font-size: 16px; -fx-padding: 12px; -fx-border-radius: 8px; -fx-border-color: #ccc; -fx-background-color: #f9f9f9; -fx-width: 100%; -fx-margin-bottom: 20px;"/>

    <!-- Actions -->
    <HBox spacing="15" alignment="center" style="-fx-margin-top: 20px;">
        <Button text="Ajouter la voiture" onAction="#ajouterVoiture" style="-fx-font-size: 16px; -fx-padding: 12px 20px; -fx-background-color: #4CAF50; -fx-text-fill: white; -fx-border-radius: 8px; -fx-border-color: #4CAF50; -fx-font-weight: bold; -fx-cursor: hand; -fx-transition: background-color 0.3s ease;"/>
        <Button text="Fermer" onAction="#fermerFormulaire" style="-fx-font-size: 16px; -fx-padding: 12px 20px; -fx-background-color: #f44336; -fx-text-fill: white; -fx-border-radius: 8px; -fx-border-color: #f44336; -fx-font-weight: bold; -fx-cursor: hand; -fx-transition: background-color 0.3s ease;"/>
    </HBox>
</VBox>
