<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox prefHeight="500.0" prefWidth="432.0" spacing="12" style="-fx-padding: 20px; -fx-background-color: #ffffff; -fx-border-radius: 8px; -fx-max-width: 600px; -fx-margin: auto; -fx-box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/23.0.1" fx:controller="Controlleurs.AjouterVoitureClientController">
    <!-- Titre -->
    <Label style="-fx-font-size: 22px; -fx-font-weight: 600; -fx-text-fill: #333; -fx-margin-bottom: 20px; -fx-text-alignment: center;" text="Ajouter une Voiture" />

    <!-- Sélection du client -->
    <Label style="-fx-font-size: 13px; -fx-text-fill: #555; -fx-font-weight: 500; -fx-margin-bottom: 6px;" text="Sélectionnez un client" />
    <ComboBox fx:id="comboBoxClients" promptText="Sélectionner un client" style="-fx-font-size: 14px; -fx-padding: 10px; -fx-border-radius: 8px; -fx-border-color: #ccc; -fx-background-color: #f9f9f9; -fx-width: 100%; -fx-margin-bottom: 10px;" />

    <!-- Marque de la voiture -->
    <Label style="-fx-font-size: 13px; -fx-text-fill: #555; -fx-font-weight: 500; -fx-margin-bottom: 6px;" text="Marque de la voiture" />
    <TextField fx:id="textFieldMarque" promptText="Marque" style="-fx-font-size: 14px; -fx-padding: 10px; -fx-border-radius: 8px; -fx-border-color: #ccc; -fx-background-color: #f9f9f9; -fx-width: 100%; -fx-margin-bottom: 10px;" />

    <!-- Modèle de la voiture -->
    <Label style="-fx-font-size: 13px; -fx-text-fill: #555; -fx-font-weight: 500; -fx-margin-bottom: 6px;" text="Modèle de la voiture" />
    <TextField fx:id="textFieldModele" promptText="Modèle" style="-fx-font-size: 14px; -fx-padding: 10px; -fx-border-radius: 8px; -fx-border-color: #ccc; -fx-background-color: #f9f9f9; -fx-width: 100%; -fx-margin-bottom: 10px;" />

    <!-- Kilométrage -->
    <Label style="-fx-font-size: 13px; -fx-text-fill: #555; -fx-font-weight: 500; -fx-margin-bottom: 6px;" text="Kilométrage" />
    <TextField fx:id="textFieldKilometrage" promptText="Kilométrage" style="-fx-font-size: 14px; -fx-padding: 10px; -fx-border-radius: 8px; -fx-border-color: #ccc; -fx-background-color: #f9f9f9; -fx-width: 100%; -fx-margin-bottom: 10px;" />
    
    <!-- Année -->
    <Label style="-fx-font-size: 13px; -fx-text-fill: #555; -fx-font-weight: 500; -fx-margin-bottom: 6px;" text="Année" />
    <TextField fx:id="textFieldAnnee" promptText="Année" style="-fx-font-size: 14px; -fx-padding: 10px; -fx-border-radius: 8px; -fx-border-color: #ccc; -fx-background-color: #f9f9f9; -fx-width: 100%; -fx-margin-bottom: 10px;" />

    <!-- Immatriculation -->
    <Label style="-fx-font-size: 13px; -fx-text-fill: #555; -fx-font-weight: 500; -fx-margin-bottom: 6px;" text="Immatriculation" />
    <TextField fx:id="textFieldImmatriculation" promptText="Immatriculation" style="-fx-font-size: 14px; -fx-padding: 10px; -fx-border-radius: 8px; -fx-border-color: #ccc; -fx-background-color: #f9f9f9; -fx-width: 100%; -fx-margin-bottom: 15px;" />

    <!-- Actions -->
    <HBox alignment="center" spacing="12" style="-fx-margin-top: 20px;">
        <Button onAction="#ajouterVoiture" style="-fx-font-size: 14px; -fx-padding: 10px 18px; -fx-background-color: #4CAF50; -fx-text-fill: white; -fx-border-radius: 8px; -fx-border-color: #4CAF50; -fx-font-weight: bold; -fx-cursor: hand; -fx-transition: background-color 0.3s ease;" text="Ajouter la voiture" />
        <Button onAction="#fermerFormulaire" style="-fx-font-size: 14px; -fx-padding: 10px 18px; -fx-background-color: #f44336; -fx-text-fill: white; -fx-border-radius: 8px; -fx-border-color: #f44336; -fx-font-weight: bold; -fx-cursor: hand; -fx-transition: background-color 0.3s ease;" text="Fermer" />
    </HBox>
</VBox>

