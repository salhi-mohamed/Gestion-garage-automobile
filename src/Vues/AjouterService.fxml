<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox spacing="10" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controlleurs.AjouterServiceController"
      style="-fx-background-color: #f5f5f5; -fx-padding: 20px; -fx-alignment: center;">

    <!-- Titre -->
    <Label text="Ajouter un nouveau service"
           style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #333333;"/>

    <!-- Liste des rendez-vous -->
    <HBox spacing="10">
        <Label text="Rendez-vous :" style="-fx-font-size: 14px;"/>
        <ComboBox fx:id="rendezVousComboBox" promptText="Sélectionnez un rendez-vous" prefWidth="300"
                  style="-fx-font-size: 14px;"/>
    </HBox>

    <!-- Type de service -->
    <HBox spacing="10">
        <Label text="Type de service :" style="-fx-font-size: 14px;"/>
        <ComboBox fx:id="typeServiceComboBox" promptText="Sélectionnez un type de service" prefWidth="300"
                  style="-fx-font-size: 14px;"/>
    </HBox>

    <!-- Liste des employés disponibles -->
    <VBox spacing="5">
        <Label text="Employés disponibles :" style="-fx-font-size: 14px;"/>
        <TableView fx:id="employesTableView" prefHeight="200" prefWidth="400"
                   style="-fx-background-color: #ffffff; -fx-border-color: #cccccc; -fx-font-size: 14px;">
            <columns>
                <TableColumn fx:id="colNom" text="Nom" prefWidth="150"/>
                <TableColumn fx:id="colPrenom" text="Prénom" prefWidth="150"/>
            </columns>
        </TableView>
    </VBox>

    <!-- Liste des pièces de rechange -->
    <VBox spacing="5">
        <Label text="Pièces de rechange :" style="-fx-font-size: 14px;"/>
        <TableView fx:id="piecesTableView" prefHeight="200" prefWidth="400"
                   style="-fx-background-color: #ffffff; -fx-border-color: #cccccc; -fx-font-size: 14px;">
            <columns>
                <TableColumn fx:id="colPieceNom" text="Nom" prefWidth="150"/>
                <TableColumn fx:id="colPiecePrix" text="Prix" prefWidth="100"/>
            </columns>
        </TableView>
    </VBox>

    <!-- Liste des fournitures -->
    <VBox spacing="5">
        <Label text="Fournitures :" style="-fx-font-size: 14px;"/>
        <TableView fx:id="fournituresTableView" prefHeight="200" prefWidth="400"
                   style="-fx-background-color: #ffffff; -fx-border-color: #cccccc; -fx-font-size: 14px;">
            <columns>
                <TableColumn fx:id="colFournitureNom" text="Nom" prefWidth="150"/>
                <TableColumn fx:id="colFourniturePrix" text="Prix" prefWidth="100"/>
            </columns>
        </TableView>
    </VBox>

    <!-- Coût du service -->
    <HBox spacing="10">
        <Label text="Coût estimé :" style="-fx-font-size: 14px;"/>
        <TextField fx:id="coutServiceField" promptText="Entrez le coût estimé" prefWidth="150"
                   style="-fx-font-size: 14px;"/>
    </HBox>

    <!-- Bouton pour ajouter le service -->
    <Button text="Ajouter Service" onAction="#ajouterService"
            style="-fx-background-color: #009688; -fx-text-fill: white; -fx-font-size: 14px;
                   -fx-padding: 10px 20px; -fx-border-radius: 5px; -fx-cursor: hand;"/>
</VBox>
