<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>

<StackPane prefHeight="879.0" prefWidth="1237.0" style="-fx-alignment: center; -fx-padding: 50px;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controlleurs.BienvenueController">
    
    <!-- Image de fond -->
    <ImageView fx:id="backgroundImage" fitHeight="600" fitWidth="900" />

    <!-- Contenu de la page -->
    <VBox alignment="CENTER" spacing="50" style="-fx-background-color: transparent;">
        
        <!-- Texte de bienvenue déplacé vers le haut -->
<Text fx:id="bienvenueText" 
      style="-fx-font-family: 'Montserrat', sans-serif; 
             -fx-font-size: 36px; 
             -fx-font-weight: bold; 
             -fx-fill: linear-gradient(to right, #2c3e50, #34495e); 
             -fx-effect: dropshadow(gaussian, rgba(0, 0, 0, 0.7), 12, 4, 0, 4); 
             -fx-text-alignment: center; 
             -fx-stroke: #fff; 
             -fx-stroke-width: 1px;" 
      text="Bienvenue dans l'Application AutoMécano" />

        <!-- Espacement dynamique pour garantir que le bouton se trouve en bas -->
        <VBox VBox.vgrow="ALWAYS" />
        
        <!-- Bouton "Commencer" stylisé -->
        <Button fx:id="startButton" onAction="#commencer" prefHeight="45.0" prefWidth="165.0" style="-fx-font-size: 18px;                         -fx-background-color: linear-gradient(to right, #2C3E50, #34495E);                         -fx-text-fill: white;                         -fx-padding: 15px 30px;                         -fx-border-radius: 30px;                         -fx-background-radius: 30px;                        -fx-effect: dropshadow(gaussian, rgba(0, 0, 0, 0.4), 10, 0.5, 0, 5);" text="Commencer">
         <VBox.margin>
            <Insets bottom="10.0" />
         </VBox.margin></Button>
        
        <!-- Espacement pour maintenir le texte en haut -->
        <VBox.margin>
            <Insets top="100.0" />
        </VBox.margin>
    </VBox>
</StackPane> 