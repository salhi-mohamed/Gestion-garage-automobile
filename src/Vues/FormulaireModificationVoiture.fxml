<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
      fx:controller="Controlleurs.FormulaireModificationVoitureController"
      stylesheets="@ModifierStyles.css"
      spacing="15" alignment="CENTER">
    <Label text="Modifier les informations du client" style="-fx-font-size: 18px; -fx-font-weight: bold;" />

    <HBox spacing="15">
        <Label text="Marque :" />
        <TextField fx:id="textFieldMarque" />
    </HBox>

    <HBox spacing="15">
        <Label text="Modele :" />
        <TextField fx:id="textFieldModele" />
    </HBox>

    <HBox spacing="15">
        <Label text="Kilometrage :" />
        <TextField fx:id="textFieldKilometrage" />
    </HBox>

   

    <HBox spacing="20" alignment="CENTER">
        <Button text="Enregistrer" onAction="#enregistrerModifications" />
        <Button text="Annuler" onAction="#fermerFormulaire" style="-fx-background-color: #cccccc; -fx-text-fill: black;" />
    </HBox>
</VBox>

